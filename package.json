{
  "name": "updatehive-react",
  "description": "React components and hook for UpdateHive",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/updatehive-react.umd.js",
  "module": "dist/updatehive-react.es.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/updatehive-react.es.js",
      "require": "./dist/updatehive-react.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p ./tsconfig-build.json && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.6",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
